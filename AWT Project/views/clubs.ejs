<!DOCTYPE html>
<html lang="en">

<%- include('partials/head', { title: 'Clubs - CampusConnect' }) %>

    <body>
        <%- include('partials/navbar', { page: 'clubs' }) %>

            <div style="padding-top: 80px;"></div>

            <section class="featured-events">
                <div class="section-header">
                    <h2>Student Clubs</h2>
                    <p>Join a community that shares your passion.</p>
                </div>

                <div class="events-grid">
                    <% if (clubs && clubs.length> 0) { %>
                        <% clubs.forEach(club=> { %>
                            <div class="event-card">
                                <img src="<%= club.image %>" alt="<%= club.name %>" class="card-image">
                                <div class="card-content">
                                    <h3>
                                        <%= club.name %>
                                    </h3>
                                    <p class="event-description">
                                        <%= club.description %>
                                    </p>
                                    <div
                                        style="margin-top: auto; padding-top: 10px; border-top: 1px solid rgba(0,0,0,0.05);">
                                        <p style="font-size: 0.85rem; color: var(--text-secondary); margin: 0;">
                                            <strong>President:</strong>
                                            <%= club.president %>
                                        </p>
                                        <p style="font-size: 0.85rem; color: var(--text-secondary); margin: 0;">
                                            <strong>Email:</strong>
                                            <%= club.email %>
                                        </p>
                                    </div>
                                    <button class="btn-secondary" style="margin-top: 15px; width: 100%;"
                                        onclick="alert('Join Request Sent to <%= club.email %>!')">Join Club</button>
                                </div>
                            </div>
                            <% }); %>
                                <% } else { %>
                                    <p>No clubs found.</p>
                                    <% } %>
                </div>
            </section>

            <%- include('partials/footer') %>

                <script src="/js/main.js"></script>
    </body>

</html>